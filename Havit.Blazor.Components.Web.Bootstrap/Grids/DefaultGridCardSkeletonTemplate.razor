<HxCard FooterCssClass="border-top d-flex justify-content-between py-2" BodyCssClass="py-2">
    <BodyTemplate>
        <HxCardTitle CssClass="mb-3">
            <HxPlaceholderContainer Animation="PlaceholderAnimation.Glow">
                <HxPlaceholder Columns="3" Size="PlaceholderSize.Large" />
                <HxPlaceholder Columns="7" Size="PlaceholderSize.Large" />

                <HxPlaceholder Columns="3" Size="PlaceholderSize.ExtraSmall" />
                <HxPlaceholder Columns="7" Size="PlaceholderSize.ExtraSmall" />
            </HxPlaceholderContainer>
        </HxCardTitle>
        <HxCardText>
            <HxPlaceholderContainer Animation="PlaceholderAnimation.Glow">
                <HxPlaceholder Columns="2" Size="PlaceholderSize.Regular" />
                <HxPlaceholder Columns="1" Size="PlaceholderSize.Regular" />
                <HxPlaceholder Columns="4" Size="PlaceholderSize.Regular" />
                <HxPlaceholder Columns="1" Size="PlaceholderSize.Regular" />
                <HxPlaceholder Columns="3" Size="PlaceholderSize.Regular" />

                <HxPlaceholder Columns="1" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="5" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="2" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="3" Size="PlaceholderSize.Small" />

                <HxPlaceholder Columns="2" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="4" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="2" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="3" Size="PlaceholderSize.Small" />


                @* <HxPlaceholder Columns="3" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="4" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="1" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="5" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="1" Size="PlaceholderSize.Small" />
                <HxPlaceholder Columns="8" Size="PlaceholderSize.Small" /> *@
            </HxPlaceholderContainer>
        </HxCardText>
    </BodyTemplate>
</HxCard>
