@namespace Havit.Blazor.Components.Web.Bootstrap
<a href="./" class="@CssClassHelper.Combine(CssClass)">
	@if (LogoTemplate != null)
	{
		<div class="hx-sidebar-brand-logo">@LogoTemplate(new() { SidebarCollapsed = ParentSidebar.Collapsed })</div>
	}
	else
	{
		<div class="hx-sidebar-brand-shortname">@BrandNameShort</div>
	}

	<span class="hx-sidebar-brand-name">@BrandName</span>
</a>